{
  "manifest_version": 3,
  "name": "ANSI-Septic",
  "description": "Render ANSI escape codes in .txt and .log files (and text/plain pages).",
  "version": "1.0.0",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "128": "icons/icon128.png"
  },
  "action": { "default_title": "ANSI-Septic", "default_popup": "popup.html" },
  "permissions": ["storage"],
  "content_scripts": [{
    "matches": [
      "*://*/*.txt",
      "*://*/*.log",
      "file:///*"
    ],
    "js": ["content.js"],
    "run_at": "document_end"
  }]
}